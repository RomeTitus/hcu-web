extends layout

block content
	div.area
		h2 Users

		table.table.table-striped
			thead.thead-dark
				th User ID
				th Name
				th Email
				th Phone Number

			each row in data
				tr
					td= row.uid
					td= row.name
					td= row.email
					td= row.phone

	div.area
		h2 Add User
		form(action="users" method="POST")
			div.form-group
				label(for="name") Name:
				input(
					type="text"
					id="name"
					name="name"
				).form-control
			div.form-group
				label(for="email") Email:
				input(
					type="email"
					id="email"
					name="email"
				).form-control
			div.form-group
				label(for="password") Password:
				input(
					type="password"
					id="password"
					name="password"
				).form-control
			div.form-group
				label(for="phone") Phone Number:
				input(
					type="text"
					id="phone"
					name="phone"
				).form-control

			input(type="submit" value="Submit").btn.btn-primary