extends layout

block content
	div.sub-grid
		div.area
			h2 Users

			table.table.table-striped
				thead.thead-dark
					th Username
					th Name
					th Email
					th Level

				each row in data
					tr
						td= row.Username
						td= row.firstName + " " + row.lastName
						td= row.emailAddress
						td= row.UserType

		div.area
			h2 Add User
			form(action="users" method="POST")
				div.form-group
					label(for="firstname") First Name:
					input(
						type="text"
						id="firstname"
						name="firstname"
					).form-control
				div.form-group
					label(for="lastname") Last Name:
					input(
						type="text"
						id="lastname"
						name="lastname"
					).form-control
				div.form-group
					label(for="username") Username:
					input(
						type="text"
						id="username"
						name="username"
					).form-control
				div.form-group
					label(for="email") Email:
					input(
						type="email"
						id="email"
						name="email"
					).form-control
				div.form-group
					label(for="password") Password:
					input(
						type="password"
						id="password"
						name="password"
					).form-control
				div.form-group
					label(for="phone") Phone Number:
					input(
						type="text"
						id="phone"
						name="phone"
					).form-control
				div.form-group
					label(for="level") Level:
					input(
						type="text"
						id="level"
						name="level"
					).form-control

				input(type="submit" value="Submit").btn.btn-primary