extends layout

block content
	div.area-alt
		div.sub-grid
			div.area
				h2 Users

				table.table.table-striped.table-sm
					thead.thead-dark
						th Username
						th Name
						th Email
						th Level
						th

					each row in data
						tr
							td= row.Username
							td= row.firstName + " " + row.lastName
							td= row.emailAddress
							td= row.UserType
							td 
								a(href="user/"+row.UserID).btn.btn-info Edit

			if level == "admin"
				div.area
					h2 Add User
					form(action="users" method="POST")
						div.form-group
							label(for="firstname") First Name:
							input(
								required
								type="text"
								id="firstname"
								name="firstname"
							).form-control
						div.form-group
							label(for="lastname") Last Name:
							input(
								required
								type="text"
								id="lastname"
								name="lastname"
							).form-control
						div.form-group
							label(for="username") Username:
							input(
								required
								type="text"
								id="username"
								name="username"
							).form-control
						div.form-group
							label(for="email") Email:
							input(
								required
								type="email"
								id="email"
								name="email"
							).form-control
						div.form-group
							label(for="password") Password:
							input(
								required
								type="password"
								id="password"
								name="password"
							).form-control
						div.form-group
							label(for="phone") Phone Number:
							input(
								type="text"
								id="phone"
								name="phone"
							).form-control
						div.form-group
							label(for="level") Level:
							select(name="level").form-control
								option(value="admin") Admin
								option(value="carer") Carer
							

						input(type="submit" value="Submit").btn.btn-primary