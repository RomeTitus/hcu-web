extends layout

block content

	each horse in horses
		if(horse.isDesceased == "0")
			div.area.sub-grid
				table.table.table-striped.table-sm

					form(action=horse.HorseID+"/update-horse" method="POST")
					
						tr
							th ID
							td= horse.HorseID
						tr
							th Name
							td= horse.Name
						
						tr
							th Age
							td= horse.Age
							
						tr
							th Micro-Chip
							if(horse.mircochipCode != "")
								
								td= horse.mircochipCode
							else
								td
									input(
											type="text"
											id="mircochipCode"
											name="mircochipCode"
											value= ""
										).form-control
						tr
							th Is Desceased
							if(horse.isDesceased != "")
								td Yes
							else
								td
									input(
											type="checkbox"
											id="desceased"
											name="desceased"
											value= "desceased"
										).form-control
							
						tr
							th Breed
							td= horse.Breed	
						tr
							th Colour
							td= horse.Colour
						tr
							th Found By:
							td= horse.FoundBy
						
						each his, index in horsesHis
							if(index === 0)
							
								table.table.table-striped.table-sm
									if(his.DischargeDate == null)
										
										tr
											th Owner
											td
												input(
													required
													type="text"
													id="Owner"
													name="Owner"
													value= his.Owner
												).form-control
											
										tr
											th Notes
											td
												textarea(
													type="text"
													id="notes"
													name="notes"
												).form-control
													=his.Note
										
										tr
											th Admission Date
											td= his.AdmissionDate
										tr
											th Condition
											td
												select(
													required
													id="Condition"
													name="Condition"
												).form-control
													option(value=his.HorseCondition) 
														=his.HorseCondition
													option(value="Healthy") Healthy
													option(value="Stable") Stable
													option(value="Critical") Critical
											
										tr
											th Treatment
											td
												input(
													type="text"
													id="Treatment"
													name="Treatment"
													value= his.treatment
												).form-control
											
										tr
											th Carer
											td
												input(
													required
													type="text"
													id="Carer"
													name="Carer"
													value= his.Carer
												).form-control
											
										tr
											th Weight (KG)
											td
												input(
													
													required
													type="number"
													id="Weight"
													name="Weight"
													value= his.Weight
													max="1600"
													min="30"
												).form-control
												
										tr
											th Height (CM)
											td
												input(
													required
													type="number"
													id="Height"
													name="Height"
													value= his.Height
													max="300"
													min="30"
												).form-control
										tr
											th Discharge Date:
											td
												input(
													type="date"
													id="DischargeDate"
													name="DischargeDate"
													value= his.DischargeDate
													min = his.AdmissionDate
												).form-control

										tr
											th Gender
											td
												input(
													required
													type="text"
													id="Gender"
													name="Gender"
													value= his.Gender
												).form-control
									else
										
										tr
											th Owner
											td
												input(
													required
													type="text"
													id="Owner"
													name="Owner"
													value= his.Owner
												).form-control
											
										tr
											th Notes
											td
												input(
													type="text"
													id="notes"
													name="notes"
													value= his.Note
												).form-control
												
										
										tr
											th Admission Date
											td 
												input(
													required
