											th Condition
											td
												select(
													required
													id="Condition"
													name="Condition"
												).form-control
													option(value=his.HorseCondition) 
														=his.HorseCondition
													option(value="Healthy") Healthy
													option(value="Stable") Stable
													option(value="Critical") Critical
											
										tr
