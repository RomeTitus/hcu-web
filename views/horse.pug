									a.btn.btn-light(href="/") Cancel
									input(type="submit" value="Update").btn.btn-primary
		else
			div.area
				table.table.table-striped.table-sm
					tr
						th ID
							td= horse.HorseID
					tr
						th Name
							td= horse.Name
					
					tr
						th Age
							td= horse.Age
						
					tr
						th Micro-Chip
							td= horse.mircochipCode
					tr
						th Is Desceased
							td Yes		
					tr
						th Breed
